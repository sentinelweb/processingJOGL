<filter name="Color Particles Shader">
    <description>Updates the color of the particles</description>
    <fragment>resources/glgraphics/ex/paintercam/ColorPart.glsl</fragment>
    <textures input="6" output="3"></textures>
    <grid mode="compiled">
        <resolution nx="w" ny="h" mode="points"></resolution>
		<point>
		    <coord x="x" y="y"></coord>
            <texcoord s="s" t="t"></texcoord>
		</point>
    </grid>
</filter>
